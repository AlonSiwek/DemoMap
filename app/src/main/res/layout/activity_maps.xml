<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="505dp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#89dcdf">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/page2_map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </android.support.v4.view.ViewPager>


    <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_alignParentEnd="false"
        tools:layout_marginBottom="90dp" />

    <ImageButton
        android:id="@+id/finish_btn"
        android:layout_width="60dp"
        android:layout_height="62.5dp"
        android:background="@drawable/finish_btb_background"
        android:elevation="0dp"
        android:src="@drawable/finish"
        android:layout_above="@+id/notifications_checks_button"
        android:layout_alignParentEnd="true" />

    <!--tools:context="com.example.currentplacedetailsonmap.MapsActivityCurrentPlaces"
