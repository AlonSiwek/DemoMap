<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_screen_frag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/appName_txtView"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="Walkii"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="32dp" />

    <Button
        android:id="@+id/go_walking_btn"
        android:layout_width="166dp"
        android:layout_height="158dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbutton"
        android:gravity="center"
        android:onClick="go_toast"
        android:text="GO!" />

    <ListView
        android:id="@+id/user_approoved_scrollView"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_margin="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="30dp"
        android:headerDividersEnabled="true"
        android:padding="3dp">

    </ListView>

</LinearLayout>
